# Maintainer: Gabor Pali <pali.gabor@gmail.com>

pkgname=bluetoothctl-proxy
pkgver=0.1.0
pkgrel=0
pkgdesc="Bluetoothctl proxy for Wifibox"
url="https://github.com/pgj/freebsd-wifibox-alpine"
arch="all"
license="BSD2"
depends="socat"
install=""
subpackages=
options="!check"
arch="noarch"
source=bluetoothctl-proxy.initd

package() {
	install -D -m755 "$srcdir"/bluetoothctl-proxy.initd "$pkgdir"/etc/init.d/bluetoothctl-proxy
	mkdir -p "$pkgdir"/etc/conf.d
	ln -s /media/etc/bluetoothctl-proxy.conf "$pkgdir"/etc/conf.d/bluetoothctl-proxy
}
sha512sums="
4834f53f4f1daf2b55dd6f4a41f7944264fc20e31536ef61691caf678d97ef902ea3f04b9be2d5095c39e88a5faab59f1bba31d36de0ff0575d0a8e91af51542  bluetoothctl-proxy.initd
"
