#!/sbin/openrc-run

description="Sets service-specific defaults."

start() {
        ebegin "Setting defaults"
	. /etc/udhcpc/udhcpc.conf
        if [ ! -s "$UDHCPD_CONF" ] ; then
		sed 's|%%DNS%%||;s|%%DOMAIN%%|localhost|;s|%%SEARCH%%|localhost|' < "$UDHCPD_CONF_TEMPLATE" > "$UDHCPD_CONF"
        fi
        if [ -f /etc/conf.d/radvd ]; then
                . /etc/conf.d/radvd
                if [ ! -s "$CONFIGFILE" ]; then
                        sed 's|%%DNS%%||;s|%%DOMAIN%%|localhost|;s|%%SEARCH%%|localhost|' < "$CONFIGFILE_TEMPLATE" > "$CONFIGFILE"
                fi
        fi
        eend $?
}
