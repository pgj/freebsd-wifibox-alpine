#     - CVE-2019-14834
#   2.79-r0:
#     - CVE-2017-15107
#   2.78-r0:
#     - CVE-2017-13704
#     - CVE-2017-14491
#     - CVE-2017-14492
#     - CVE-2017-14493
#     - CVE-2017-14494
#     - CVE-2017-14495
#     - CVE-2017-14496

build() {
	export CFLAGS="$CFLAGS -flto=auto"
	make LDFLAGS="$LDFLAGS" CFLAGS="$CFLAGS" COPTS="-DNO_TFTP -DNO_AUTH -DNO_LOOP -DNO_INOTIFY -DNO_DUMPFILE" clean all

	cd contrib/lease-tools/
	make LDFLAGS="$LDFLAGS" CFLAGS="$CFLAGS" clean all
}

package() {
	install -D -m755 -t "$pkgdir"/usr/sbin/ \
		"$builddir"/src/dnsmasq

	install -D -m755 -t "$pkgdir"/usr/bin/ \
		"$builddir"/contrib/lease-tools/dhcp_release6 \
		"$builddir"/contrib/lease-tools/dhcp_lease_time

	install -D -m755 "$srcdir"/dnsmasq.initd "$pkgdir"/etc/init.d/dnsmasq
	install -D -m644 "$srcdir"/dnsmasq.confd "$pkgdir"/etc/conf.d/dnsmasq

	ln -s /media/etc/dnsmasq.conf "$pkgdir"/etc
}

